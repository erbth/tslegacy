#!/bin/bash

set -e

# Clean the packaging target
PKG_DIR="${PACKAGING_LOCATION}/skel-dev/${DESTDIR}"

# Install and adapt the package
cd "${BUILD_DIR}/${SRC_DIR}"
make DESTDIR="${PKG_DIR}" install

cd "${PKG_DIR}"
bash "${INSTALL_DIR}"/adapt.sh

# README, COPYING, LICENSE files and friends
install -dm755 "${PKG_DIR}/usr/share/doc/skel-dev/"

for FILE in "${BUILD_DIR}/${SRC_DIR}"/{README,COPYING*,LICENSE,NOTES}
do
    if test -r "$FILE"
    then
        cp "$FILE" "${PKG_DIR}/usr/share/doc/skel-dev/"
    fi
done
